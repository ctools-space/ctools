{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "paths": {
            "renderer*": [
                "src/renderer*"
            ],
            "main*": [
                "src/main*"
            ],
            "preload*": [
                "src/preload*"
            ],
            "common*": [
                "src/common*"
            ],
            "@pokemonon/knife*": [
                "@pokemonon/knife/dist*",
                "./node_modules/@pokemonon/knife/dist*"
            ],
            "ctools": [
                "src/main/plugin/api.ts"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true
    }
}